var real_eps1 = 1.0;
var imag_eps1 = 0.0;
var real_eps2 = 2.0;
var imag_eps2 = 0.0;
var quant="reflection_coeff";

var inputs = {};
$(document).ready(function() {
    doModule2_3(inputs);
});

$(function() {
   $('#slider1').slider({
      range: 'min',
      step: 0.5,
      min: 1,
      max: 100,
      value: 1,
      slide: function(event, ui) {
          var inputs = {};
          inputs.real_eps1Val = ui.value;
          doModule2_3(inputs);
          $('#real_eps1').val( '  '+ ui.value );
      }
   });
   $( '#real_eps1' ).val('  '+ $( '#slider1' ).slider( 'value') );

   $('#slider2').slider({
      range: 'min',
      step: 0.5,
      min: 0,
      max: 100,
      value: 0,
      slide: function(event, ui) {
          var inputs = {};
          inputs.imag_eps1Val = ui.value;
          doModule2_3(inputs);
          $('#imag_eps1').val( '  '+ ui.value );
      }
   });
   $( '#imag_eps1' ).val('  '+ $( '#slider2' ).slider( 'value') );

   $('#slider3').slider({
      range: 'min',
      step: 0.5,
      min: 1,
      max: 100,
      value: 2,
      slide: function(event, ui) {
          var inputs = {};
          inputs.real_eps2Val = ui.value;
          doModule2_3(inputs);
          $('#real_eps2').val( '  '+ ui.value );
      }
   });
   $( '#real_eps2' ).val('  '+ $( '#slider3' ).slider( 'value') );

   $('#slider4').slider({
      range: 'min',
      step: 0.5,
      min: 0,
      max: 100,
      value: 0,
      slide: function(event, ui) {
          var inputs = {};
          inputs.imag_eps2Val = ui.value;
          doModule2_3(inputs);
          $('#imag_eps2').val( '  '+ ui.value );
      }
   });
   $( '#imag_eps2' ).val('  '+ $( '#slider4' ).slider( 'value') );

   $('input[name="quant"]').change(function() {
       inputs.quant = $('input[name="quant"]:checked').attr("value");
       doModule2_3(inputs);
   });

});

